<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/client_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/invoice_label_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-25dp"
        android:paddingStart="@dimen/horizontal_padding"
        android:paddingLeft="@dimen/horizontal_padding"
        android:paddingTop="@dimen/horizontal_padding"
        android:paddingEnd="@dimen/horizontal_padding"
        android:paddingRight="@dimen/horizontal_padding"
        tools:src="@drawable/yellow_sq" />

    <TextView
        android:id="@+id/total_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
       android:paddingLeft="@dimen/horizontal_padding"
        android:paddingStart="@dimen/horizontal_padding"
        android:paddingRight="@dimen/horizontal_padding"
        android:paddingEnd="@dimen/horizontal_padding"
        android:paddingTop="@dimen/horizontal_padding"
        android:layout_toRightOf="@id/invoice_label_image"
        tools:text="$500"/>


    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_text"
        android:paddingLeft="@dimen/horizontal_padding"
        android:paddingStart="@dimen/horizontal_padding"
        android:layout_toRightOf="@id/invoice_label_image"

        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Kamal Saleem" />

    <View
        android:id="@+id/add_client_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/name_text"
        android:background="@android:color/darker_gray"></View>



</RelativeLayout>